<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_grapth"
    app:startDestination="@id/homeFragment">


    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.peacefull_dessert_mob_dev.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home" >

        <action
            android:id="@+id/action_homeFragment_to_dessertPageFragment"
            app:destination="@id/dessertPageFragment" />

    </fragment>

    <fragment
        android:id="@+id/dessertPageFragment"
        android:name="com.example.peacefull_dessert_mob_dev.DessertPageFragment"
        android:label="Dessert Details"
        tools:layout="@layout/fragment_dessert_page" >

        <argument
            android:name="dessertName"
            app:argType="string" />
    </fragment>
</navigation>